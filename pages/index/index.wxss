/**index.wxss**/
.og-calendar {
  background-image: linear-gradient(120deg, #3BC4FF 0%, #3AB2FF 100%);
  color: #FFF;
  padding: 0 0 40rpx 0;
}
.og-calendar .header {
  position: relative;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  text-align: center;
}
.og-calendar .header .calendar,
.og-calendar .header .menu {
  position: absolute;
  top: 0;
  width: 120rpx;
  height: 120rpx
}
.og-calendar .header .btn:active {
  background: #39C1FF;
}
.og-calendar .header .month-pre {
  left: 0;
}
.og-calendar .header .month-next {
  right: 0;
}
.og-calendar .header .month-pre image,
.og-calendar .header .month-next image {
  margin-top: 30rpx;
  width: 45rpx;
  height: 45rpx;
}
.og-calendar .col {
  width: 14.28571428571429%;
  display: inline-flex;
  justify-content: center;
  text-align: center;
  padding: 15rpx 0;
}
.og-calendar .col text {
  display: block;
  width: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border: 2rpx solid transparent;
}
.og-calendar .body .col text {
  border-radius: 50%;
}
.og-calendar .body .col.active text {
  border-color: #FFF;
}
.og-calendar .body .col.old {
  color: #7A7A7F;
} 
.og-calendar .body .col.current text,
.og-calendar .body .col text:active {
    background-color: #FFF;
    color: #39C1FF;
}
.item {
  margin: 30rpx 30rpx 0 30rpx;
  padding-left: 20rpx; 
  display: inline-flex;
  justify-content: space-between;
}
.item image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}
.item .item_content {
  border-bottom: 1px solid #CCC;
}
.item .item_content .item_content-header {
  display: flex;
  justify-content: space-between;
  line-height: 18rpx;
}
.header-text {
  font-size: 28rpx;
  font-weight: 700;
}
.header-time {
  font-size: 24rpx;
  color: #CCC;
}
.item_content-text  {
  font-size: 24rpx;
  color: #CCC;
  margin: 18rpx 0 30rpx 0;
}
.body, .week {
  padding: 0 30rpx;
}
.addItem {
  position: fixed;
  right: 50rpx;
  bottom: 30rpx;
  width: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 80rpx;
  color: #FFF;
  background: #00D397;
  display: inline-block;
}


